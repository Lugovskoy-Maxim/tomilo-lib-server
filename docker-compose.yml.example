version: '3'
services:
  mongo:
    image: mongo:4.4.4
    container_name: mongo
    restart: always
    environment:
      - MONGO_LOGIN=admin
      - MONGO_PASSWORD=password123
      - MONGO_HOST=localhost
      - MONGO_PORT=27017
      - MONGO_AUTHDATABASE=admin
      - MONGO_DATABASE=tomilo-lib_db
    ports:
      - 27017:27017
    volumes:
      - ./mongo-data-4.4:/data/db
